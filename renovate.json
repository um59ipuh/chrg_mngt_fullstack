{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "description": ["before 7am on monday in every month"],
  "schedule": ["* 7-18 * * 1-5"],

  "packageRules": [
    {
      "description": ["Scan all major dependencies including problematic libs"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "description": ["Scan all no major dependencies"],
      "groupName": "all minor and patch dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": ["*"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": ["Exclude all problematic libs for non major"],
      "groupName": "all minor and patch dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "thelastpickle/cassandra-reaper",
        "io.grpc:**",
        "io.netty:**",
        "tcnative",
        "firebase-admin",
        "kubernetes ingress",
        "jjwt",
        "logback",
        "com.fasterxml.jackson.core:**",
        "azure-sdk-bom"
      ],
      "enabled": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
